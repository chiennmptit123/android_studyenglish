<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.test.complete.CompleteActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn đã hoàn thành bài đánh giá"
            android:textSize="30dp"
            android:textColor="@color/login_text"
            android:textStyle="bold"
            android:layout_above="@id/txtchuy"
            android:layout_marginBottom="15dp"
            android:id="@+id/txthoanthanh"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hãy chú ý thông báo để biết điểm và lời khuyên dành cho bạn"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:id="@+id/txtchuy"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoàn thành"
            android:background="@drawable/custom_button_login"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_below="@id/txtchuy"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:id="@+id/btnHoanThanh"/>
    </RelativeLayout>
</layout>